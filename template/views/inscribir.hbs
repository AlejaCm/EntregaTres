{{>header}}
{{{mensaje}}}

<h1>Completar el formulario</h1>

<form class="row g-3" action="/inscribir" method="post">
  <div class="col-md-4">
    <label for="validationServer01" class="form-label">Nombre</label>
    <input type="text" class="form-control"  required name="nombre">
    <div class="valid-feedback">

    </div>
  </div>
  <div class="col-md-4">
    <label for="validationServer02" class="form-label">Apellido</label>
    <input type="text" class="form-control"  required name="apellido">
    <div class="valid-feedback">
    
    </div>
  </div>
  <div class="col-md-4">
    <label for="validationServerUsername" class="form-label">Correo</label>
    <div class="input-group has-validation">
      <span class="input-group-text" id="inputGroupPrepend3">@</span>
      <input type="text" class="form-control"  aria-describedby="inputGroupPrepend3 validationServerUsernameFeedback" required name="correo">
      <div id="validationServerUsernameFeedback" class="invalid-feedback">
        Escribe un correo valido
      </div>
    </div>
  </div>
  <div class="col-md-3">
    <label for="validationServer05" class="form-label">Curso</label>
   <select name="id">
     {{#each res}}
       <option value="{{this._id}}">
         {{this.NombreCurso}}
       </option>

     {{/each}}
   </select>
    <div id="validationServer05Feedback" class="invalid-feedback">
    </div>
  </div>
  <div class="col-md-4">
    <label for="validationServer02" class="form-label">Usuario</label>
    <input type="text" class="form-control"  required name="usuario">
    <div class="valid-feedback">
    
    </div>
  </div>
  <div class="col-md-4">
    <label for="validationServer02" class="form-label">Contrase√±a</label>
    <input type="password" class="form-control"  required name="contrasena">
    <div class="valid-feedback">
    
    </div>
  </div>
  <div class="col-12">
    <div class="form-check">
      <input class="form-check-input" type="checkbox" value="" id="invalidCheck3" aria-describedby="invalidCheck3Feedback" required>
      <label class="form-check-label" for="invalidCheck3">
        Acepto terminos y condiciones.
      </label>
      <div id="invalidCheck3Feedback" class="invalid-feedback">
       Aceptar para finalizar.
    </div>
  </div>
  <br>
  <div class="col-12">
    <button class="btn btn-success" type="submit">Enviar</button>
  </div>
</form>

{{>footer}}